{% extends "::base.html.twig" %}

{% block head %}
    <link rel="icon" sizes="16x16" href="{{ asset('favicon.ico') }}" />
    <link rel="stylesheet" 
          href="{{ asset('bundles/mdsrStudio/css/studio.css') }}" />
{% endblock %}

{% block title 'mdsr Studio Web' %}

{% block body %}
    <section id="logo">
        <img src="{{ asset('Bundles/mdsrstudio/images/mdsr_studio_logo.png') }}" 
             alt="mdsr studio logo image"
             title="mdsr software studio by Mauricio Del Solar">
        <span>by Mauricio Del Solar</span>
    </section>
    <nav>
        <ul id="menu">
            <li>
                {% if menuLinkOff == 'work' %}
                    work
                {% else %}
                    <a href="{{ path('mdsr_studio_work') }}">work</a>
                {% endif %}
            </li>
            
            <li>
                {% if menuLinkOff == 'training' %}
                    training
                {% else %}
                    <a href="#">training</a>
                {% endif %}
            </li>
            
            <li>
                {% if menuLinkOff == 'hire me' %}
                    hire me
                {% else %}
                    <a href="#">hire me</a>
                {% endif %}
            </li>
            
            <li>
                <a href="#">blog</a>
            </li>

            <li>
                {% if menuLinkOff == 'about' %}
                    about
                {% else %}
                    <a href="{{ path('mdsr_studio_about') }}">about</a>
                {% endif %}
            </li>
        </ul>
    </nav>

    {% block content %}{% endblock %}

    <footer>
        <section id="links">
            <h1>Contact</h1>

            <article id="contact">
                <h1>Contact me</h1>
                
                <ul>
                    <li>
                        <a href="mailto:mdsr.pro@gmail.com">
                            mdsr.pro@gmail.com
                        </a>
                    </li>
                    <li>
                        <a href="mailto:support@mdsrstudio.com">
                            support@mdsrstudio.com
                        </a>
                    </li>
                </ul>
            </article>

            <article id="avaliability">
                <h1>Avaliability: <em>{{ avaliabilityText }}</em></h1>

                <table>
                    <thead>
                        <tr>
                            <th>0-2 days</th>
                            <th>3-5 days</th>
                            <th>6-10 days</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td colspan="3">
                                <div id="bg-avaliability-bar"></div>
                                <div id="avaliability-bar"></div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </article>

            <article id="follow">
                <h1>Follow me</h1>
                <ul>
                    <li>
                        linkedin
