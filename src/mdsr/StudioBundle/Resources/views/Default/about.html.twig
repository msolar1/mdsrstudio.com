{% extends "mdsrStudioBundle::layout.html.twig" %}
{% trans_default_domain 'about' %}

{% block stylesheets %}
    {{ parent() }}

    <link rel="stylesheet"
          href="{{ asset('bundles/mdsrstudio/css/about.css') }}" />
{% endblock %}

{% block content %}
    <h1>{{ 'hello' | trans }}</h1>

    <figure>
        <img src="{{ asset('bundles/mdsrstudio/images/me_myself.png') }}" 
             alt="{{ 'image.alt' | trans }}" 
    		 title="{{ 'image.title' | trans }}">
    </figure>
    
    <article id="left">
        <p>{{ 'hello.p1' | trans | raw }}</p>
        <p>{{ 'hello.p2' | trans | raw }}</p>
    </article>

    <article id="right">
        <p>{{ 'hello.p3' | trans | raw }}</p>
        <p>{{ 'hello.p4' | trans | raw }}</p>
        <p>{{ 'hello.p5' | trans | raw }}</p>
        <p>{{ 'hello.p6' | trans | raw }}</p>
    </article>
	
	<div style="clear: both;"></div>
{% endblock %}